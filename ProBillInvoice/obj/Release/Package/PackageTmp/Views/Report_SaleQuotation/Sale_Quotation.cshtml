    <script>
        function AjFunction(GSTStatus) {
            if (GSTStatus === "Within State Supplier") {

                $('#SaleQuotation tr th[colspan]:nth-child(7)').show();//Cgst(%)
                $('#SaleQuotation td:nth-child(7)').show();//cgst
                $('#SaleQuotation td:nth-child(8)').show();//cgst_amt
                $('#SaleQuotation tr th[id="cgst"]:nth-child(1)').show();
                $('#SaleQuotation tr th[ id="cgstamt"]:nth-child(2)').show();

                $('#SaleQuotation tr th[colspan]:nth-child(8)').show(); //Sgst(%)
                $('#SaleQuotation td:nth-child(9)').show();//sgst
                $('#SaleQuotation td:nth-child(10)').show(); //sgst_amt
                $('#SaleQuotation tr th[id="sgst"]:nth-child(3)').show();
                $('#SaleQuotation tr th[ id="sgstamt"]:nth-child(4)').show();

                $('#SaleQuotation tr th[colspan]:nth-child(9)').hide();//Igst(%)
                $('#SaleQuotation td:nth-child(11)').hide();//igst
                $('#SaleQuotation td:nth-child(12)').hide();//igst_amt
                $('#SaleQuotation tr th[id="igst"]:nth-child(5)').hide();
                $('#SaleQuotation tr th[ id="igstamt"]:nth-child(6)').hide();

            } else if (GSTStatus === "Out of State Supplier") {
                $('#SaleQuotation tr th[colspan]:nth-child(7)').hide();//Cgst(%)
                $('#SaleQuotation td:nth-child(7)').hide();//cgst
                $('#SaleQuotation td:nth-child(8)').hide();//cgst_amt
                $('#SaleQuotation tr th[id="cgst"]:nth-child(1)').hide();
