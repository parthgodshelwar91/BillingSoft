                        $.each(data.List, function (i, Emp) {
                            items += "<option value='" + Emp.Value + "'>" + Emp.Text + "</option>";
                        });
                        $("#SaleQuotationHeaderSearch_sales_person_id").html(items);
                        AjFunction(GSTStatus);
                    },
                    error: function () {
                        $('#SaleQuotationHeaderSearch_quotation_kindAttn').val(' ');
