@model ProBillInvoice.Models.RackMasterModel

@{
    ViewBag.Title = "Create";
    int SrNo = 0;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0 page-heading-color">Rack Master - @ViewBag.Titlename</h4>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <div>
                                @Html.HiddenFor(model => model.rack_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.rack_id, "", new { @class = "text-danger" })
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.rack_code, htmlAttributes: new { @class = "col-form-label", id = "rackcode" })
                                    @Html.Label("*", htmlAttributes: new { style = "color: red;" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.rack_code, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%;", placeholder = "Enter Rack Code" } })
                                    @Html.ValidationMessageFor(model => model.rack_code, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.Label("Store Name", htmlAttributes: new { @class = "col-form-label" })
                                    @Html.Label("*", htmlAttributes: new { style = "color: red;" })
                                </div>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(model => model.store_id, new SelectList(ViewBag.StoreList, "Value", "Text"), "-- Select--", new { @class = "form-select", @style = "width: 60%;" })
                                    @Html.ValidationMessageFor(model => model.store_id, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.rack_name, htmlAttributes: new { @class = "col-form-label", id = "rackname" })
                                    @Html.Label("*", htmlAttributes: new { style = "color: red;" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.rack_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Rack Name" } })
                                    @Html.ValidationMessageFor(model => model.rack_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.defunct, htmlAttributes: new { @class = "col-form-label" })
                                </div>
                                <div class="col-md-9">
                                    <div class="checkbox" style="float: left; padding: 7px 10px 0px 0px;">
                                        @Html.EditorFor(model => model.defunct)
                                        @Html.ValidationMessageFor(model => model.defunct, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.Label("Discontinue", htmlAttributes: new { @style = "float: left; padding: 5px 10px 0px 0px; margin-bottom: 0px; color: #b50a0a; width: 30%;" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 text-end">
                                    <button type="submit" class="save-btn-normal" title="Save"><i class="ri-save-line"></i>Save</button>
                                    <button type="button" class="cancel-btn-normal" title="Cancel" id="btnSave" onclick="Refresh();"><i class="ri-close-fill"></i>Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-6">
                                <h5 class="card-title mb-0 page-heading-color">Rack Master</h5>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="RackMaster" class="table table-bordered dt-responsive nowrap table-striped align-middle app-tbl-one" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">Sr No</th>
                                            <th>@Html.DisplayNameFor(model => model.rack_name)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.defunct)</th>
                                            <th style="text-align:center">Action</th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model.RackList)
                                    {
                                        SrNo = SrNo + 1;
                                        <tr>
                                            <td style="color: darkgray; text-align: center;">@SrNo</td>
                                            <td><a href="#!">@Html.DisplayFor(modelItem => item.rack_name)</a></td>
                                            @if (item.defunct == false)
                                            {
                                                <td style="text-align: center;"><i class="bi bi-check-circle" title="Active"></i> </td>
                                            }
                                            @if (item.defunct == true)
                                            {
                                                <td style="text-align: center;"><i class="ri-close-circle-line" title="InActive"></i></td>
                                            }
                                            <td style="text-align: center;">
                                                <div class="dropdown d-inline-block">
                                                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="ri-more-fill align-middle"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end mybtn2-form">
                                                        <li><a href="@Url.Action("Details","RackMaster",new { id = item.rack_id })" class="btn btn-info custom-toggle active"><i class="ri-eye-fill align-bottom"></i> View</a></li>
                                                        <li><a href="@Url.Action("Edit","RackMaster",new { id = item.rack_id })" class="btn btn-secondary custom-toggle"><i class="ri-pencil-fill align-bottom"></i> Edit</a></li>
                                                        <li><a class="btn btn-danger custom-toggle" onclick="ConfirmDelete();"><i class="ri-delete-bin-fill"></i> Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@if (ViewBag.Message != null)
 {
    <script>
        window.onload = function () {

            Swal.fire({
                title: "<span style='color: #3085d6;'>@Html.Raw(ViewBag.Message)</span>",
                icon: "success",
                iconColor:"#04AA6D",
                confirmButtonClass: "w-xs me-2 mt-2",
                confirmButtonColor: "#3085d6",

            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("Create", "RackMaster")";
                }
            });
        } ;
    </script>
 }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")    

    <script>
        document.addEventListener("DOMContentLoaded",
            function () { new DataTable("#RackMaster", { scrollX: !0, sort: !0  }) })
    </script>

    <script>
        function Refresh() {
          window.location.href = "@Url.Action("Create", "RackMaster")";
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#rack_name").change(function () {
                var textvalue = $(this).val();
                var SGM = {
                    tablename: 'rack_mst',
                    colname: 'rack_name',
                    checkvalue: textvalue
                };
                if ("@ViewBag.Titlename" == "Create") {
                    $.ajax({
                        type: "POST",
                        url: "/Utils/CheckExists",
                        data: JSON.stringify(SGM),
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            results = data.CheckExistsData;
                            if (results !== null) {
                                Swal.fire('Rack Name Already Exists For <b style="color:#b50a0a">' + textvalue + '</b>. Please enter a different Rack Name.');
                                document.getElementById('rack_name').value = '';
                            }
                        },
                        error: function () {
                            swal.fire("Error occured!!")
                        }
                    });
                }
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $('#rack_name').on('input', function () {
                var enteredText = $(this).val();
                var uppercaseText = enteredText.toUpperCase();
                $(this).val(uppercaseText);
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#rack_code').keyup(function () {
                if ($(this).val().trim() !== '') {
                    $('#rackcode').css('color', 'green');
                } else {
                    $('#rackcode').css('color', '');
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#rack_name').keyup(function () {
                if ($(this).val().trim() !== '') {
                    $('#rackname').css('color', 'green');
                } else {
                    $('#rackname').css('color', '');
                }
            });
        });
    </script>
}
