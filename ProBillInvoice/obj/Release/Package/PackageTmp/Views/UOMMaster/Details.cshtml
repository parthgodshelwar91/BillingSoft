@model ProBillInvoice.Models.UnitMasterModel

@{
    ViewBag.Title = "Details";
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            <h5 class="card-title mb-0" style="padding-top: 12px;">Unit- Details</h5>
                        </div>
                        <div class="col-sm-6" style="text-align: right;">
                            <a href="@Url.Action("Create", "UnitMaster")" class="btn btn-primary">
                                <i class="las la-arrow-circle-left"></i>
                                <span>
                                    Back
                                </span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <div class="row mb-3">
                            <div class="col-md-12">
                                @Html.HiddenFor(model => model.unit_code, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.unit_code, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.short_desc, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.short_desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.short_desc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.long_desc, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.long_desc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.long_desc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.defunct, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.defunct, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.defunct, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6"></div>
    </div>
</div>