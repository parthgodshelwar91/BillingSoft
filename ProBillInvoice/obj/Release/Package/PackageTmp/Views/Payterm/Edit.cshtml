@model ProBillInvoice.Models.PaytermModel

@{
    ViewBag.Title = "Edit";
    int SrNo = 0;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0 page-heading-color">Payterm Master - Edit</h5>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <div>
                                @Html.HiddenFor(model => model.payterm_code, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.payterm_desc, htmlAttributes: new { @class = "col-form-label" })
                                    @Html.Label("*", htmlAttributes: new { style = "color: red;" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.payterm_desc, new { htmlAttributes = new { @class = "form-control", placeholder = " Payterm Descending " } })
                                    @Html.ValidationMessageFor(model => model.payterm_desc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.payterm_days, htmlAttributes: new { @class = "col-form-label" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.payterm_days, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%;", placeholder = " Enter PayTerm Days" } })
                                    @Html.ValidationMessageFor(model => model.payterm_days, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.defunct, htmlAttributes: new { @class = "col-form-label" })
                                </div>
                                <div class="col-md-9">
                                    <div class="checkbox" style="float: left; padding: 7px 10px 0px 0px;">
                                        @Html.EditorFor(model => model.defunct)
                                        @Html.ValidationMessageFor(model => model.defunct, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.Label("Discontinue", htmlAttributes: new { @style = "float: left; padding: 5px 10px 0px 0px; margin-bottom: 0px; color: #b50a0a; width: 25%;" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 text-end">
                                    @*<button type="submit" class="btn btn-secondary"><i class="ri-save-2-line label-icon align-middle fs-16 me-2"></i>Save</button>
                                        <button type="button" id="btnCancel" onclick="Refresh();" class="btn btn-danger"><i class="ri-close-circle-line align-middle" style="padding-right: 10px;"></i>Cancel</button>*@
                                    <button type="submit" class="save-btn-normal" title="Save"><i class="ri-save-line"></i>Save</button>
                                    <button type="button" class="cancel-btn-normal" title="Cancel" id="btnSave" onclick="Refresh();"><i class="ri-close-fill"></i>Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-6">
                                <h5 class="card-title mb-0 page-heading-color">Payterm Master</h5>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="Payterm" class="table table-bordered dt-responsive nowrap table-striped align-middle app-tbl-one" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">Sr No</th>
                                            <th>@Html.DisplayNameFor(model => model.payterm_desc)</th>
                                            <th>@Html.DisplayNameFor(model => model.payterm_days)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.defunct)</th>
                                            <th style="text-align:center">Action</th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model.PaytermList)
                                    {
                                        SrNo = SrNo + 1;
                                        <tr>
                                            <td style="color: darkgray;text-align:center">@SrNo</td>
                                            <td><a href="#!">@Html.DisplayFor(modelItem => item.payterm_desc)</a></td>
                                            <td style="color: darkgray;">@Html.DisplayFor(modelItem => item.payterm_days)</td>
                                            @if (item.defunct == false)
                                            {
                                                <td style="text-align: center;"><i class="bi bi-check-circle" title="Active"></i> </td>
                                            }
                                            @if (item.defunct == true)
                                            {
                                                <td style="text-align: center;"><i class="ri-close-circle-line" title="InActive"></i> </td>
                                            }
                                            <td style="text-align: center;">
                                                <div class="dropdown d-inline-block">
                                                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="ri-more-fill align-middle"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end mybtn2-form">
                                                        <li><a href="@Url.Action("Details","Payterm",new { id = item.payterm_code })" class="btn btn-info custom-toggle active"><i class="ri-eye-fill align-bottom"></i> View</a></li>
                                                        <li><a href="@Url.Action("Edit","Payterm",new { id = item.payterm_code })" class="btn btn-secondary custom-toggle"><i class="ri-pencil-fill align-bottom"></i> Edit</a></li>
                                                        <li><a class="btn btn-danger custom-toggle" onclick="ConfirmDelete();"><i class="ri-delete-bin-fill"></i> Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script>
        window.onload = function () {

            Swal.fire({
                title: "<span style='color: #3085d6;'>@Html.Raw(ViewBag.Message)</span>",
                icon: "success",
                iconColor:"#04AA6D",
                confirmButtonClass: "w-xs me-2 mt-2",
                confirmButtonColor: "#3085d6",

            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("Create", "Payterm")";
                }
            });
        } ;
    </script>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded",
            function () { new DataTable("#Payterm", { scrollX: !0, sort: !0  }) })
    </script>

    <script>
        function Refresh() {
          window.location.href = "@Url.Action("Create", "Payterm")";
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#payterm_desc").change(function () {
                var textvalue = $(this).val();
                var SGM = {
                    tablename: 'payterm',
                    colname: 'payterm_desc',
                    checkvalue: textvalue
                };
                $.ajax({
                    type: "POST",
                    url: "/Utils/CheckExists",
                    data: JSON.stringify(SGM),
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        results = data.CheckExistsData;
                        if (results !== null) {
                            Swal.fire('Payterm Description Already Exists For <b style=color:red>' + textvalue + '</b>');
                            document.getElementById('payterm_desc').value = '';
                        }
                    },
                    error: function () {
                        swal.fire("Error occured!!")
                    }
                });
            })
        })
    </script>
}
