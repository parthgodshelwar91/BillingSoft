    <script>
        function formatAadharNumber(input) {
            //debugger;
            var value = input.value.replace(/\s+/g, '');
            var match = value.match(/.{1,4}/g);
            var formattedValue = match ? match.join(' ') : value;
            input.value = formattedValue;
        }
    </script>

    <script>
        function validateGST(input) {
            //debugger;
            var gstRegex = /^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9]{1}[Z]{1}[A-Z0-9]{1}$/;
            var gstValue = input.value.toUpperCase();
            if (!gstRegex.test(gstValue)) {
                input.setCustomValidity("Invalid GST No. format. Must be in the format 22AAAAA0000A1Z5.");
            } else {
                input.setCustomValidity("");
            }
        }
    </script>

    <script>
        function validatePAN(input) {
            var panRegex = /^[A-Z]{5}[0-9]{4}[A-Z]{1}$/;
            var panValue = input.value.toUpperCase();
            if (!panRegex.test(panValue)) {
                input.setCustomValidity("Invalid PAN No. format. Must be in the format 'AFZPK7190K'.");
            } else {
                input.setCustomValidity("");
            }
        }
