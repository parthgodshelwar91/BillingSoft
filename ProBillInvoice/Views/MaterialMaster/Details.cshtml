@model ProBillInvoice.Models.MaterialMasterModel

@{
    ViewBag.Title = "Details";
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            <h5 class="card-title mb-0 page-heading-color">Material Master - Details</h5>
                        </div>
                        <div class="col-sm-6" style="text-align: right;">
                            <a href="@Url.Action("Create", "MaterialMaster")" class="back-btn"><i class="las la-arrow-circle-left"></i>Back</a>                            
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group" style="margin-bottom:0px;">
                        <div class="row mb-3">
                            <div class="col-md-12">
                                @Html.HiddenFor(model => model.material_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.material_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.material_name, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.material_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.material_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.material_recipe_name, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.material_recipe_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.material_recipe_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.material_type, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.material_type, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.material_type, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @*<div class="row mb-3">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.opening_quantity, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.opening_quantity, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.opening_quantity, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                        <div class="row mb-3">
                            <div class="col-md-3">
                                @Html.LabelFor(model => model.material_rate, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.material_rate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.material_rate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>