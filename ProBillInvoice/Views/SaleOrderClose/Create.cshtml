@model ProBillInvoice.Models.SaleOrderModel

@{
    ViewBag.Title = "Create";
    int count = 0;
    int SrNo = 0;
    decimal TotalAmount = 0;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">

                            <div class="col-sm-6">
                                <h4 class="card-title mb-0 page-heading-color">Sale Order Close </h4>
                            </div>
                            <div class="col-sm-6">
                                <div class="add-create-btn">
                                    <button id="toggleButton" type="button" class="btn btn-Name addMembers-modal" style="float:right;" title="Click here to open search box"><div style="float: left;"><i class="ri-search-2-line fs-16 me-2"></i></div>Search</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div id="CloseSection" style="display:none;">
                            <div class="search-panel-custom1 mb-0 pt-0 searh-p-c-laptop">
                                <div class="row">
                                    <div class="col-md-2">
                                        @*@Html.Label("Site Name", new { @class = "form-label", @style = "" })*@
                                        @Html.DropDownListFor(Model => Model.SaleOrderHeaderSearch.SiteId, (SelectList)ViewBag.SiteList, new { @class = "form-select", @style = "", @title = "Select Site Name" })
                                    </div>

                                    <div class="col-md-2">
                                        @*@Html.Label("Party Name", new { @class = "form-label", @style = "" })*@
                                        @Html.DropDownListFor(Model => Model.SaleOrderHeaderSearch.PartyId, (SelectList)ViewBag.PartyList, "--Select Supplier Name--", new { @class = "form-select", @style = "", @title = "Select Supplier Name" })
                                    </div>

                                    <div class="col-md-2">
                                        @*@Html.LabelFor(model => Model.SaleOrderHeaderSearch.FromDate, new { @class = "form-label", @style = "" })*@
                                        @Html.EditorFor(model => Model.SaleOrderHeaderSearch.FromDate, new { htmlAttributes = new { @type = "Date", @class = "form-control", @style = "", @title = "Set From Date" } })
                                        @Html.ValidationMessageFor(model => Model.SaleOrderHeaderSearch.FromDate, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-2">
                                        @*@Html.LabelFor(model => Model.SaleOrderHeaderSearch.ToDate, new { @class = "form-label", @style = "" })*@
                                        @Html.EditorFor(model => Model.SaleOrderHeaderSearch.ToDate, new { htmlAttributes = new { @type = "Date", @class = "form-control", @style = "", @title = "Set To Date" } })
                                        @Html.ValidationMessageFor(model => Model.SaleOrderHeaderSearch.ToDate, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-primary addMembers-modal" formmethod="post" formaction="Search" margin:0px 0 0 0; title="Click here to search"><div style="float: left;"><i class="ri-search-2-line fs-16 me-2"></i></div>Search</button>
                                    </div>
                                    <div class="col-md-2"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-12 table-responsive" style="height: 250px;">
                                <table id="SaleOrderHeader" class="table table-bordered dt-responsive nowrap table-striped align-middle app-tbl-one" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">Sr No</th>
                                            <th>Order No</th>
                                            <th>Order Date</th>
                                            <th>Party Name</th>
                                            <th>City</th>
                                            <th>Site</th>
                                            <th style="text-align: right;"><i class="bx bx-rupee"></i> Amount</th>
                                            <th style="text-align:center">Action</th>
                                        </tr>
                                    </thead>

                                    @if (Model.SaleOrderHeader != null)
                                    {
                                        foreach (var item in Model.SaleOrderHeader)
                                        {
                                            count = count + 1;
                                            <tr>
                                                <td style="text-align:center">@count</td>
                                                <td><a href="#!">@Html.DisplayFor(modelItem => item.order_no)</a></td>
                                                <td>@string.Format("{0:dd/MM/yyyy}", item.order_date)</td>
                                                <td>@Html.DisplayFor(modelItem => item.party_name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.city_name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.site_name)</td>
                                                <td style="text-align: right; color: green;"><i class="bx bx-rupee"></i> @String.Format("{0:N2}", item.total_amount)</td>
                                                <td style="text-align: center;">
                                                    @*<button id="OrderID" name="OrderID" type="submit" class="btn btn-info addMembers-modal" style="padding: 2px 10px 2px 10px;" formmethod="post" formaction="View" value=@item.order_id><i class="ri-eye-fill align-bottom me-1"></i>View</button>*@
                                                    <button id="OrderID" name="OrderID" type="submit" class="po-view-btn" formmethod="post" formaction="View" value=@item.order_id><i class="bi bi-eye"></i>View</button>
                                                    @*<button id="SaleOrderID" name="SaleOrderID" type="submit" class="btn btn-info addMembers-modal" style="padding: 2px 10px 2px 10px;" formmethod="post" formaction="AllClose" value=@item.order_id title="Click To Close All The Record"><i class="las la-hand-point-right me-1"></i>Close All</button>*@
                                                    <button id="SaleOrderID" name="SaleOrderID" type="submit" class="po-close-btn" formmethod="post" formaction="AllClose" value=@item.order_id><i class="ri-close-fill"></i>Close All</button>
                                                </td>
                                            </tr>

                                            TotalAmount = TotalAmount + item.total_amount;
                                        }
                                    }
                                </table>
                            </div>
                        </div>

                        <fieldset style="border: 1px solid #e8e8e8; border-radius: 0px; padding: 6px 15px; margin: 0px 0px 20px 0px;background-color: #fafffa;">
                            <div class="row">
                                <div class="col-sm-6">
                                    <span style="padding: 0px 10px 0px 0px;">Count:</span><strong style="color: #fff; background-color: #1a5b71; padding: 0px 7px;border-radius: 2px;">@count</strong>
                                </div>
                                <div class="col-md-6 text-end">
                                    <span style="padding: 0px 10px 0px 10px;">Total Amount:</span><strong style="color: green;font-size: 18px;"><i class="bx bx-rupee"></i>@String.Format("{0:N2}", TotalAmount)</strong>
                                </div>
                            </div>
                        </fieldset>

                        <div class="row">
                            <div class="col-sm-12 table-responsive" style="height: 250px;">
                                <table id="SaleOrderDetail" class="table table-bordered dt-responsive nowrap table-striped align-middle app-tbl-one" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">Sr No</th>
                                            <th>Material</th>
                                            <th>Unit</th>
                                            <th style="text-align:right">Quantity</th>
                                            <th style="text-align:right">Rate</th>
                                            <th style="text-align: right;"><i class="bx bx-rupee"></i> Amount</th>
                                            <th style="text-align:center">Action</th>
                                        </tr>
                                    </thead>

                                    @if (Model.SaleOrderDetail != null)
                                    {
                                        foreach (var item in Model.SaleOrderDetail)
                                        {
                                            SrNo = SrNo + 1;
                                            <tr>
                                                <td style="text-align:center">@SrNo</td>
                                                <td><a href="#!">@Html.DisplayFor(modelItem => item.material_name)</a></td>
                                                <td>@Html.DisplayFor(modelItem => item.short_desc)</td>
                                                <td style="text-align: right; color: #0f625a;">@Html.DisplayFor(modelItem => item.order_qty)</td>
                                                <td style="text-align: right; color: #619b1c;">@Html.DisplayFor(modelItem => item.item_rate)</td>
                                                <td style="text-align: right; color: green;">@Html.DisplayFor(modelItem => item.sub_total)</td>
                                                <td style="text-align: center;">
                                                    @*<button id="SaleOrderDetailID" name="SaleOrderDetailID" type="submit" class="btn btn-info addMembers-modal" style="padding: 2px 10px 2px 10px;" formmethod="post" formaction="Close" value=@item.order_detail_id title="Click To Close The Record"><i class="lab la-swift"></i>Close</button>*@
                                                    <button id="SaleOrderDetailID" name="SaleOrderDetailID" type="submit" class="po-close-btn" formmethod="post" formaction="Close" value=@item.order_detail_id><i class="ri-close-fill"></i>Close All</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </div>
                        </div>

                        <div class="row bottom-save-cancel-btn">
                            <div class="col-sm-12">
                                <a href="@Url.Action("Create", "SaleOrderClose" )" class="refresh-btn" title="Click here to refresh"><i class="bx bx-rotate-right"></i>Refresh</a>
                                <a href="@Url.Action("Create", "SaleOrderClose")" class="back-btn" title="Click here to back"><i class="las la-arrow-circle-left"></i>Back</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script>
        window.onload = function () {
            Swal.fire({
                title: "<span style='color: #3085d6;'>@Html.Raw(ViewBag.Message)</span>",
                icon: "success",
                iconColor:"#04AA6D",
                confirmButtonClass: "w-xs me-2 mt-2",
                confirmButtonColor: "#3085d6",

            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("Create", "SaleOrderClose")";
                }
            });
        } ;
    </script>
}
@if (ViewBag.Messg != null)
{
    <script>
        window.onload = function () {
            Swal.fire({
                title: "<span style='color: #3085d6;'>@Html.Raw(ViewBag.Messg)</span>",
                icon: "success",
                iconColor:"#04AA6D",
                confirmButtonClass: "w-xs me-2 mt-2",
                confirmButtonColor: "#3085d6",

            })
        } ;
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        document.addEventListener("DOMContentLoaded",
            function () { new DataTable("#SaleOrderHeader", { scrollX: !0, pageLength: 15, sort: !0, order: [[0, 'desc']], searching: false, paging: false, info: false }) })
    </script>

    <script>
        document.addEventListener("DOMContentLoaded",
            function () { new DataTable("#SaleOrderDetail", { scrollX: !0, pageLength: 15, sort: !0, order: [[0, 'desc']], searching: false, paging: false, info: false }) })
    </script>

    <script>
        toggleButton.addEventListener("click", function () {
            if (CloseSection.style.display === "none") {
                CloseSection.style.display = "block";
            } else {
                CloseSection.style.display = "none";
            }
        });
    </script>
}