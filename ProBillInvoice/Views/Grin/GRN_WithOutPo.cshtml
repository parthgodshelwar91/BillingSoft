@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />
    <script src="~/Scripts/chosen.jquery.js"></script>

    <script>
        $(function () {
            $("#GrinHeaderSearch_party_id").chosen();
        });
    </script>

    @if (TempData["ErrorMsg"] != null)
    {
        <script>
        window.onload = function () {
            Swal.fire({
                text: "@TempData["ErrorMsg"]",
                icon: "warning",
                confirmButtonClass: "btn btn-primary w-xs me-2 mt-2",
            })
        };
        </script>
    }

    <script>
        $(document).ready(function () {
            $("#GrinHeaderSearch_payterm_code").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();
                var SGM = {
                    PaytermCode: selectedValue,
                    PaytermName: selectedText
                };

                $.ajax({
                    type: "POST",
                    url: "/Grin/PaytermDays",
                    data: JSON.stringify(SGM),
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        data.msg;
                        $("#GrinHeaderSearch_payterm_days").val(data.msg);
                    },
                    error: function () {
                        alert("Error occured!!")
                    }
                });
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $("#GrinHeaderSearch_party_id").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();
