        $(document).ready(function () {
            var selectedId = localStorage.getItem('selectedGrinId');
            if (selectedId) {
                $('.list-group-item').each(function () { //already Class code
                    if ($(this).attr('href').includes('GrinId=' + selectedId)) {
                        $(this).addClass('selected');
                    }
                });
            }

            $('.list-group-item').on('click', function (e) {
                var href = $(this).attr('href');
                var liId = new URLSearchParams(href.split('?')[1]).get('GrinId');
                localStorage.setItem('selectedGrinId', liId);
                $('.list-group-item').removeClass('selected');
                $(this).addClass('selected');
            });
        });
    </script>
