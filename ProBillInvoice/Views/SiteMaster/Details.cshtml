@model ProBillInvoice.Models.SiteMasterModel

@{
    ViewBag.Title = "Details";
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-sm-6">
                            <h5 class="card-title mb-0" style="padding-top: 12px;">Site master - Details</h5>
                        </div>
                        <div class="col-sm-6" style="text-align: right;">
                            <a href="@Url.Action("Create", "SiteMaster")" class="btn btn-primary">
                                <i class="las la-arrow-circle-left"></i>
                                <span>
                                    Back
                                </span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group" style="margin-bottom:0px;">
                        <div class="row mb-3">
                            <div class="col-md-12">
                                @Html.HiddenFor(model => model.site_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.site_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.site_name, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.site_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.site_name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.site_address, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.site_address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.site_address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.defunct, htmlAttributes: new { @class = "form-label", @style = "font-weight: bold;" })
                            </div>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.defunct, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.defunct, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>