                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script>
        window.onload = function () {

            Swal.fire({
                title: "<span style='color: #3085d6;'>@Html.Raw(ViewBag.Message)</span>",
                icon: "success",
                iconColor:"#04AA6D",
                confirmButtonClass: "w-xs me-2 mt-2",
                confirmButtonColor: "#3085d6",

            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("Create", "ProductMaster")";
                }
            });
        } ;
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        document.addEventListener("DOMContentLoaded",
            function () { new DataTable("#ProductMaster", { scrollX: !0, sort: !0 }) })
    </script>

    <script>
        function Refresh() {
          window.location.href = "@Url.Action("Create", "ProductMaster")";
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#material_name").change(function () {
                var textvalue = $(this).val();
                var SGM = {
                    tablename: 'material_mst',
                    colname: 'material_name',
                    checkvalue: textvalue
                };
                if ("@ViewBag.Title" == "Create") {
                    $.ajax({
                    type: "POST",
                    url: "/Utils/CheckExists",
                    data: JSON.stringify(SGM),
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        results = data.CheckExistsData;

                        if (results !== null) {

                            Swal.fire('Material Name Already Exists For <b style="color:#b50a0a">' + textvalue + '</b>. Please enter a different Material Name.');
                            document.getElementById('material_name').value = '';
                        }
                    },
                    error: function () {
                        swal.fire("Error occured!!")
                    }
                    });
                }
            })
        })
    </script>


    <script>
        $(document).ready(function () {
            $("#group_code").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();

                var SGM = {
                    GroupCode: selectedValue,
                    GroupName: selectedText
                };
                $('#SubGroupCode').text('*');
                $('#SubSubGroupCode').text('*');
                var items = "<option>---Select---</option>";
                $('#sub_sub_group_code').html(items);
                $('#material_code').val('');

                if ("@ViewBag.Title" == "Create") {
                    $.ajax({
                        type: "POST",
                        url: "/MaterialMaster/FillByGroupCode",
                        data: JSON.stringify(SGM),
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            $('#GroupCode').text(selectedValue);

                            data.List;
                            var items = '';
                            items = "<option value=0>---Select---</option>";
                            $.each(data.List, function (i, SGrCode) {
                                items += "<option value='" + SGrCode.Value + "'>" + SGrCode.Text + "</option>";
                            });
                            $('#sub_group_code').html(items);

                            if (data.List == 0) {
                                $('#SubGroupCode').text('*');
                                $('#SubSubGroupCode').text('*');
                                var items = "<option value=0>---Select---</option>";
                                $('#sub_sub_group_code').html(items);
                                $('#material_code').val('');
                            }
                        },
                        error: function () {
                            alert("Error occured!!")
                        }
                    });
                }
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $("#sub_group_code").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();

                var SGM = {
                    SubGroupCode: selectedValue,
                    SubGroupName: selectedText
                };
                $('#SubSubGroupCode').text('*');
                $('#material_code').val('');

                if ("@ViewBag.Title" == "Create") {
                    $.ajax({
                        type: "POST",
                        url: "/MaterialMaster/FillBySubGroupCode",
                        data: JSON.stringify(SGM),
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            $('#SubGroupCode').text(selectedValue);
                            data.List;
                            var items = '';
                            items = "<option value=0>---Select---</option>";
                            $.each(data.List, function (i, SSGrCode) {
                                items += "<option value='" + SSGrCode.Value + "'>" + SSGrCode.Text + "</option>";
                            });
                            $('#sub_sub_group_code').html(items);

                            if (data.List == 0) {
                                $('#SubSubGroupCode').text('*');
                                $('#material_code').val('');
                            }
                        },
                        error: function () {
                            alert("Error occured!!")
                        }
                    });
                }
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $("#sub_sub_group_code").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();

                var SSGM = {
                    SubSubGroupCode: selectedValue,
                    SubSubGroupName: selectedText
                };
                if ("@ViewBag.Titlename" == "Create") {
                    $.ajax({
                        type: "POST",
                        url: "/MaterialMaster/NextItemCode",
                        data: JSON.stringify(SSGM),
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            ItemCode = data.msg;
                            $('#material_code').val(ItemCode);
                            $('#SubSubGroupCode').text(selectedValue);
                        },
                        error: function () {
                            alert("Error occured!!")
                        }
                    });
                }
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $('#material_name, #material_recipe_name').on('input', function () {
                var enteredText = $(this).val();
                var uppercaseText = enteredText.toUpperCase();
                $(this).val(uppercaseText);
            });
        });
    </script>

    <script>
        var cgst = 0.0;
        var sgst = 0.0;
        function onchangeevent() {
            cgst = parseFloat($('#cgst').val());
            sgst = parseFloat($('#sgst').val());
            var CalculateKWH = cgst + sgst;
            $('#igst').val(CalculateKWH.toFixed(2));
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#unit_code").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();
                var SGM = {
                    id: selectedValue,
                    name: selectedText
                };
                $.ajax({
                    type: "POST",
                    url: "/MaterialMaster/UnitCode",
                    data: JSON.stringify(SGM),
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        $('#Unitcode').html(data.short_desc);
                    },
                    error: function () {
                        //alert("Error occured!!")
                    }
                });
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $("#alt_unit").change(function () {
                var selectedText = $(this).find("option:selected").text();
                var selectedValue = $(this).val();
                var SGM = {
                    id: selectedValue,
                    name: selectedText
                };
                $.ajax({
                    type: "POST",
                    url: "/MaterialMaster/UnitCode",
                    data: JSON.stringify(SGM),
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        $('#altunit').html(data.short_desc);
                    },
                    error: function () {
                        //alert("Error occured!!")
                    }
                });
            })
        })
    </script>
}