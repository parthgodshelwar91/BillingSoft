                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.material_code, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.material_code, new { htmlAttributes = new { @class = "form-control", @style = "font-weight: bold; color: navy; border:none; width: 40%;", @readonly = true, placeholder = "Enter Material Code" } })
