                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.unit_code, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.unit_code, new SelectList(ViewBag.UnitList, "Value", "Text"), "-- Select--", new { @class = "form-select", @style = "float: left; width: 40%;" })
