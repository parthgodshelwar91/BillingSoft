                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.alt_unit, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.alt_unit, new SelectList(ViewBag.AltUnitList, "Value", "Text"), "-- Select--", new { @class = "form-select", @style = "float: left; width: 40%;" })
