                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="ProductMaster" class="table table-hover table-bordered dt-responsive nowrap table-striped align-middle app-tbl-one" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">Sr No</th>
                                            <th>Prduct Code</th>
                                            <th>Product Name</th>
                                            <th>@Html.DisplayNameFor(model => model.material_recipe_name)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.defunct)</th>
                                            <th style="text-align:center">Action</th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model.MaterialMasterList)
                                    {
                                        SrNo = SrNo + 1;
                                        <tr>
                                            <td style="text-align:center">@SrNo</td>
                                            <td><a href="#!">@Html.DisplayFor(modelItem => item.material_code)</a></td>
                                            <td>@Html.DisplayFor(modelItem => item.material_name)</td>
                                            <td style="color: darkgray;">@Html.DisplayFor(modelItem => item.material_recipe_name)</td>
                                            @if (item.defunct == false)
                                            {
                                                <td style="text-align: center;"><i class="bi bi-check-circle" title="Active"></i></td>
                                            }
                                            @if (item.defunct == true)
                                            {
                                                <td style="text-align: center;"><i class="ri-close-circle-line" title="Inactive"></i></td>
                                            }
                                            <td style="text-align: center;">
                                                <div class="dropdown d-inline-block">
                                                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="ri-more-fill align-middle"></i></button>
                                                    <ul class="dropdown-menu dropdown-menu-end mybtn2-form">
                                                        <li><a href="@Url.Action("Details","ProductMaster",new { id = item.material_id })" class="btn btn-info custom-toggle active"><i class="ri-eye-fill align-bottom"></i> View</a></li>
                                                        <li><a href="@Url.Action("Edit","ProductMaster",new { id = item.material_id })" class="btn btn-secondary custom-toggle"><i class="ri-pencil-fill align-bottom"></i> Edit</a></li>
