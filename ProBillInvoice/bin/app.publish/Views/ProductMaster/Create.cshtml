                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.con_factor, new { htmlAttributes = new { @class = "form-control", @style = "float: left; text-align: right; width: 40%;" } })
                                        @Html.ValidationMessageFor(model => model.con_factor, "", new { @class = "text-danger" })
