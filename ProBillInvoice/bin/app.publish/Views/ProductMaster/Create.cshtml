                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.material_recipe_name, new { htmlAttributes = new { @class = "form-control", @style = "width: 100%;", placeholder = "Enter material recipe name" } })
                                        @Html.ValidationMessageFor(model => model.material_recipe_name, "", new { @class = "text-danger" })
                                    </div>
