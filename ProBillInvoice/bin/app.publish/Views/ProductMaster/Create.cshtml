                                        @Html.LabelFor(model => model.cgst, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.cgst, new { htmlAttributes = new { @class = "form-control", style = "text-align: right; width: 40%;", placeholder = "Enter Cgst %", onchange = "onchangeevent();" } })
                                        @Html.ValidationMessageFor(model => model.cgst, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.sgst, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.sgst, new { htmlAttributes = new { @class = "form-control", style = "text-align: right; width: 40%;", placeholder = "Enter Sgst %", onchange = "onchangeevent();" } })
                                        @Html.ValidationMessageFor(model => model.sgst, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3">
                                        @Html.LabelFor(model => model.igst, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.igst, new { htmlAttributes = new { @class = "form-control", style = "text-align: right; width: 40%;", placeholder = "Enter Igst %", @readonly = true } })
                                        @Html.ValidationMessageFor(model => model.igst, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-6">
                                                @Html.LabelFor(model => model.is_scrap, htmlAttributes: new { @class = "col-form-label" })
                                            </div>
                                            <div class="col-md-6">
                                                <div class="checkbox" style="float: left; padding: 10px 10px 0px 0px;">
                                                    @Html.EditorFor(model => model.is_scrap)
                                                    @Html.ValidationMessageFor(model => model.is_scrap, "", new { @class = "text-danger" })
                                                </div>
                                                @Html.Label("Generate Scrap", htmlAttributes: new { @style = "float: left; padding: 8px 10px 0px 0px; margin-bottom: 0px; color: #b50a0a; width: 80%;" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-4" style="text-align: right;">
                                                @Html.LabelFor(model => model.defunct, htmlAttributes: new { @class = "col-form-label" })
                                            </div>
                                            <div class="col-md-8">
                                                <div class="checkbox" style="float: left; padding: 10px 10px 0px 0px;">
                                                    @Html.EditorFor(model => model.defunct)
                                                    @Html.ValidationMessageFor(model => model.defunct, "", new { @class = "text-danger" })
                                                </div>
                                                @Html.Label("Discontinue", htmlAttributes: new { @style = "float: left; padding: 8px 10px 0px 0px; margin-bottom: 0px; color: #b50a0a; width: 60%;" })
