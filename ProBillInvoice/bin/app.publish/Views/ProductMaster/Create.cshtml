                                        @Html.LabelFor(model => model.hsn_code, htmlAttributes: new { @class = "col-form-label" })
                                    </div>
                                    <div class="col-md-9">
                                        @Html.EditorFor(model => model.hsn_code, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%;", placeholder = "Enter HSN Code" } })
