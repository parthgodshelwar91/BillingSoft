@model ProBillInvoice.Models.TicketsModel

@{
    ViewBag.Title = "DMClosed_Invoice";
    int SrNO = 0;
}

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-6">
                                <h4 class="card-title mb-0">@ViewBag.Titlename - Search Criteria</h4>
                            </div>

                            <div class="col-sm-6" style="float:left;">
                                @if (ViewBag.Message != null)
                                {
                                    <div class="alert alert-secondary alert-dismissible alert-label-icon label-arrow fade show" role="alert">
                                        <i class="ri-check-double-line label-icon"></i><strong>Success</strong> @ViewBag.Message
                                        <button type="button" class="btn-close" aria-label="Close" onclick="Refresh();"></button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.Label("Party Name", new { @class = "form-label", @style = "float: left; padding: 4px 10px 0px 0px;" })
                                        </div>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(Model => Model.PartyId, (SelectList)ViewBag.PartyList, "-- Select--", new { @class = "form-select form-select-sm", @style = "width: 70%;" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div style="float: left; width: 50%;">
                                                @Html.LabelFor(model => Model.FromDate, new { @class = "form-label", @style = "float: left; padding: 4px 10px 0px 0px;" })
                                                @Html.EditorFor(model => Model.FromDate, new { htmlAttributes = new { @type = "Date", @class = "form-control form-control-sm", @style = "width: 60%;" } })
                                                @Html.ValidationMessageFor(model => Model.FromDate, "", new { @class = "text-danger" })
                                            </div>
                                            <div style="float: left; width: 50%;">
                                                @Html.LabelFor(model => Model.ToDate, new { @class = "form-label", @style = "float: left; padding: 4px 10px 0px 10px;" })
                                                @Html.EditorFor(model => Model.ToDate, new { htmlAttributes = new { @type = "Date", @class = "form-control form-control-sm", @style = "width: 60%;" } })
                                                @Html.ValidationMessageFor(model => Model.ToDate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4" style="padding-top: 0px; text-align : left;">
                                    <button type="submit" class="btn btn-primary addMembers-modal" style="padding: 2px 10px 2px 10px;"><div style="float: left; padding: 0 5px 0 0;"><i class="ri-search-2-line"></i></div>Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-6">
                                <h5 class="card-title mb-0" style="font-size: 24px; padding-top: 10px;">@ViewBag.Titlename</h5>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12 table-responsive">
                                <table id="Tickets" class="table table-bordered table-hover dt-responsive table-nowrap table-striped align-middle mb-0" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Sr No</th>
                                            <th>Slip No</th>
                                            <th>DM No</th>
                                            <th>Date</th>
                                            <th>Party Name</th>
                                            <th>Transporter</th>
                                            <th>Vehicle No</th>
                                            <th>Material</th>
                                            <th>Concrete Type</th>
                                            <th>Site name</th>
                                            <th>Unit(CUM)</th>
                                            <th>Qty</th>
                                            <th>Net Wt</th>
                                            <th>Driver Name</th>
                                        </tr>
                                    </thead>

                                    @if (Model.TicketsList != null)
                                    {
                                        foreach (var item in Model.TicketsList)
                                        {
                                            SrNO = SrNO + 1;
                                            <tr>
                                                <td>@SrNO</td>
                                                <td>@Html.DisplayFor(modelItem => item.slip_no)</td>
                                                <td>@Html.DisplayFor(modelItem => item.dm_no)</td>
                                                <td>@string.Format("{0:dd/MM/yyyy}", item.ticket_date_time)</td>
                                                <td>@Html.DisplayFor(modelItem => item.party_name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.transporter_name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.vehicle_number)</td>
                                                <td>@Html.DisplayFor(modelItem => item.material_name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.concrete_type)</td>
                                                <td>@Html.DisplayFor(modelItem => item.city_name)</td>
                                                <td>@Html.DisplayFor(modelItem => item.qty_unit)</td>
                                                <td>@Html.DisplayFor(modelItem => item.qty_in_cft)</td>
                                                <td>@Html.DisplayFor(modelItem => item.net_weight)</td>
                                                <td>@Html.DisplayFor(modelItem => item.driver_name)</td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



