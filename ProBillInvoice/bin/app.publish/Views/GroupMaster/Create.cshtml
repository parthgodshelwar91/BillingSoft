@model ProBillInvoice.Models.GroupMasterModel

@{
    ViewBag.Title = "Create";
    int SrNo = 0;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0 page-heading-color">Category Master - @ViewBag.Titlename</h4>
                    </div>

                    <div class="card-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.group_code, htmlAttributes: new { @class = "col-form-label" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.group_code, new { htmlAttributes = new { @class = "form-control", @style = "font-weight: bold; color: navy; border:none; width: 40%;", @readonly = true, placeholder = "Enter group code" } })
                                    @Html.ValidationMessageFor(model => model.group_code, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.short_desc, htmlAttributes: new { @class = "col-form-label", id = "shortdesc" })
                                    @Html.Label("*", htmlAttributes: new { style = "color: red;" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.short_desc, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%;", placeholder = "Enter short name" } })
                                    @Html.ValidationMessageFor(model => model.short_desc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.long_desc, htmlAttributes: new { @class = "col-form-label", id = "longdesc" })
                                    @Html.Label("*", htmlAttributes: new { style = "color: red;" })
                                </div>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.long_desc, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter long description" } })
                                    @Html.ValidationMessageFor(model => model.long_desc, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    @Html.LabelFor(model => model.defunct, htmlAttributes: new { @class = "col-form-label" })
                                </div>
                                <div class="col-md-9">
                                    <div class="checkbox" style="float: left; padding: 7px 10px 0px 0px;">
                                        @Html.EditorFor(model => model.defunct)
                                        @Html.ValidationMessageFor(model => model.defunct, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.Label("Discontinue", htmlAttributes: new { @style = "float: left; padding: 5px 10px 0px 0px; margin-bottom: 0px; color: #b50a0a; width: 25%;" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 text-end">
                                    <button type="submit" class="save-btn-normal" title="Save"><i class="ri-save-line"></i>Save</button>
                                    <button type="button" class="cancel-btn-normal" title="Cancel" id="btnSave" onclick="Refresh();"><i class="ri-close-fill"></i>Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-sm-6">
                                <h5 class="card-title mb-0 page-heading-color">Group Master</h5>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="GroupMaster" class="table table-bordered table-responsive nowrap table-striped align-middle app-tbl-one" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="text-align: center;">Sr No</th>                                            
                                            <th>@Html.DisplayNameFor(model => model.group_code)</th>
                                            <th>@Html.DisplayNameFor(model => model.short_desc)</th>
                                            <th>@Html.DisplayNameFor(model => model.long_desc)</th>
                                            <th>@Html.DisplayNameFor(model => model.defunct)</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    @foreach (var item in Model.GroupMasterList)
                                    {
                                        SrNo = SrNo + 1;
                                        <tr>
                                            <td style="text-align: center;">@SrNo</td>
                                            <td><a href="#!">@Html.DisplayFor(modelItem => item.group_code)</a></td>
                                            <td style="color: darkgray;">@Html.DisplayFor(modelItem => item.short_desc)</td>
                                            <td>@Html.DisplayFor(modelItem => item.long_desc)</td>
                                            @if (item.defunct == false)
                                            {
                                                <td style="text-align: center;"><i class="bi bi-check-circle" title="Active"></i> </td>
                                            }
                                            @if (item.defunct == true)
                                            {
                                                <td style="text-align: center;"><i class="ri-close-circle-line" title="InActive"></i> </td>
                                            }
                                            <td style="text-align: center;">
                                                <div class="dropdown d-inline-block">
                                                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="ri-more-fill align-middle"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end mybtn2-form">
                                                        <li><a href="@Url.Action("Details","GroupMaster",new { id = item.group_code })" class="btn btn-info custom-toggle active"><i class="ri-eye-fill align-bottom"></i> View</a></li>
                                                        <li><a href="@Url.Action("Edit","GroupMaster",new { id = item.group_code })" class="btn btn-secondary custom-toggle"><i class="ri-pencil-fill align-bottom"></i> Edit</a></li>
                                                        <li><a class="btn btn-danger custom-toggle" onclick="ConfirmDelete();"><i class="ri-delete-bin-fill"></i> Delete</a></li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script>
        window.onload = function () {

            Swal.fire({
                title: "<span style='color: #3085d6;'>@Html.Raw(ViewBag.Message)</span>",
                icon: "success",
                iconColor:"#04AA6D",
                confirmButtonClass: "w-xs me-2 mt-2",
                confirmButtonColor: "#3085d6",

            }).then((result) => {
                if (result.value) {
                    window.location.href = "@Url.Action("Create", "GroupMaster")";
                }
            });
        } ;
    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded",
            function () { new DataTable("#GroupMaster", { scrollX: !0, sort: !0  }) })
    </script>

    <script>
        function Refresh() {
          window.location.href = "@Url.Action("Create", "GroupMaster")";
        }
    </script>

    <script>
        $(document).ready(function () {
            $("#short_desc").change(function () {
                var textvalue = $(this).val();
                var SGM = {
                    tablename: 'group_mst',
                    colname: 'short_desc',
                    checkvalue: textvalue
                };
                if ("@ViewBag.Titlename" == "Create") {
                    $.ajax({
                        type: "POST",
                        url: "/Utils/CheckExists",
                        data: JSON.stringify(SGM),
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            results = data.CheckExistsData;

                            if (results !== null) {

                                Swal.fire('Short Name Already Exists For <b style="color:red">' + textvalue + '</b>. Please enter a different Short Name.');
                                document.getElementById('short_desc').value = '';
                            }
                        },
                        error: function () {
                            swal.fire("Error occured!!")
                        }
                    });
                }
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $("#long_desc").change(function () {
                var textvalue = $(this).val();
                var SGM = {
                    tablename: 'group_mst',
                    colname: 'long_desc',
                    checkvalue: textvalue
                };
                if ("@ViewBag.Titlename" == "Create") {
                    $.ajax({
                        type: "POST",
                        url: "/Utils/CheckExists",
                        data: JSON.stringify(SGM),
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            results = data.CheckExistsData;

                            if (results !== null) {

                                Swal.fire('Group Desc Already Exists For <b style="color:#b50a0a">' + textvalue + '</b>. Please enter a different Group Desc.');
                                document.getElementById('long_desc').value = '';
                            }
                        },
                        error: function () {
                            swal.fire("Error occured!!")
                        }
                    });
                }
            })
        })
    </script>

    <script>
        $(document).ready(function () {
            $('#short_desc, #long_desc').on('input', function () {
                var enteredText = $(this).val();
                var uppercaseText = enteredText.toUpperCase();
                $(this).val(uppercaseText);
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#short_desc').keyup(function () {
                if ($(this).val().trim() !== '') {
                    $('#shortdesc').css('color', 'green');
                } else {
                    $('#shortdesc').css('color', '');
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#long_desc').keyup(function () {
                if ($(this).val().trim() !== '') {
                    $('#longdesc').css('color', 'green');
                } else {
                    $('#longdesc').css('color', '');
                }
            });
        });
    </script>
}



